<% layout('layouts/BaseLayout.ejs') %>

<div class="form-wrapper">
  <div class="form-card">
    <h3 class="form-title">Create a New Group</h3>
    <p class="form-subtitle">
      Create a private learning group with your friends
    </p>

    <form action="/groups" method="POST">
      <div class="mb-3">
        <label class="form-label">Group Name</label>
        <input
          name="group[name]"
          class="form-control"
          placeholder="Eg: DSA Squad"
          required
        />
      </div>

      <button class="btn btn-primary w-100">
        Create Group
      </button>
    </form>
  </div>
</div>
